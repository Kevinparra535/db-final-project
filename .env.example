# Configuración del Servidor
NODE_ENV=development
PORT=3000

# Configuración de Base de Datos PostgreSQL
# ⚠️ IMPORTANTE: Estas credenciales DEBEN coincidir con docker-compose.yml
DB_USER=kevin
DB_PASSWORD=admin123
DB_HOST=localhost
DB_NAME=academic_research_db
DB_PORT=5432

# Notas de Configuración:
# - DB_HOST=localhost cuando conectas desde el host al contenedor Docker
# - DB_HOST=postgres cuando conectas desde otro contenedor Docker
# - Las credenciales coinciden exactamente con el servicio 'postgres' en docker-compose.yml
# - Para iniciar: docker-compose up -d postgres

# Configuración de Logging
LOG_LEVEL=info

# Configuración de CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
